$V = "../VexCommon.ui";

Group {
  Anchor: (Top: 40, Left: 20, Width: 280, Height: 110);
  Background: (Color: $V.@FrameOuter);
  Padding: (Full: 2);

  Group {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
    Background: (Color: $V.@HudBackground);
    Padding: (Full: 12);
    LayoutMode: Top;

    Label {
      Anchor: (Top: 0, Height: 18);
      Text: "Vex Trial";
      Style: (FontSize: 12, RenderUppercase: true, LetterSpacing: 1, TextColor: $V.@MutedColor);
    }

    Label #DemoScore {
      Anchor: (Top: 6, Height: 22);
      Text: "Score: 0";
      Style: (FontSize: 16, RenderBold: true, TextColor: $V.@HighlightColor);
    }

    Label #DemoTimer {
      Anchor: (Top: 4, Height: 20);
      Text: "Time: 0:30";
      Style: (FontSize: 13, TextColor: $V.@BodyColor);
    }

    Label #VexDebugStat {
      Anchor: (Top: 6, Height: 16);
      Text: "DBG";
      Style: (FontSize: 11, TextColor: $V.@AccentColor);
    }
  }
}
