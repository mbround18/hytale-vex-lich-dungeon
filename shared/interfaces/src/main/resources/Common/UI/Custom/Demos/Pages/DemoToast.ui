$L = "../../Macros/Layout.ui";
$Tt = "../../Macros/Toast.ui";

Group #DemoToast {
  Anchor: (Full: 0);
  LayoutMode: Center;
  Background: #000000(0.55);

  $L.@PageFrame #Frame {
    @Width = 420;
    @Height = 200;

    $L.@HeaderBar #Header { @Text = "Demo: Toast"; }
    $L.@Spacer #Space1 { @Height = 8; }

    $Tt.@Toast #Toast { @Text = "Saved"; }
  }
}
