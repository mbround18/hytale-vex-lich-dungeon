$V = "../VexCommon.ui";

Group {
    Anchor: (Top: 20, Left: 20, Width: 300, Height: 96);
    Background: (Color: $V.@FrameOuter);
    Padding: (Full: 2);

    Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
        Background: (Color: $V.@HudBackground);
        Padding: (Top: 10, Bottom: 10, Horizontal: 12);
        LayoutMode: Top;

        Label #VexPortalCountdown {
            Anchor: (Top: 0, Height: 22);
            Text: "00:30";
            Style: (...$V.@DefaultLabelStyle, FontSize: 18, RenderBold: true, TextColor: $V.@TitleColor);
        }

        Label #VexPortalLocation {
            Anchor: (Top: 6, Height: 18);
            Text: "X: 0  Y: 0  Z: 0";
            Style: (...$V.@DefaultLabelStyle, FontSize: 12, TextColor: $V.@MutedColor);
        }
    }
}
