$L = "../../Macros/Layout.ui";
$U = "../../Macros/Utility.ui";
$B = "../../Macros/Toolbar.ui";
$Tt = "../../Macros/Toast.ui";

Group #DemoHudQuickActions {
  Anchor: (Bottom: 40, Right: 40, Width: 300, Height: 140);
  LayoutMode: Top;
  Background: #1f2a36(0.85);
  Padding: (Full: 10);

  $L.@HeaderBar #Header { @Text = "Actions"; }
  $L.@Spacer #Space1 { @Height = 6; }

  $B.@Toolbar #Toolbar {
    Group #Left {
      $B.@IconButton #Ping { @Icon = #c6d5e5; }
      $B.@IconButton #Marker { @Icon = #5fc4b6; }
    }
    Group #Right { $B.@IconButton #Settings { @Icon = #c6d5e5; } }
  }

  $L.@Spacer #Space2 { @Height = 6; }

  Group #Pills {
    LayoutMode: Left;

    $U.@PillButton #PingParty { @Text = "Ping"; }
    $U.@PillButton #Invite { @Text = "Invite"; }
  }

  $L.@Spacer #Space3 { @Height = 6; }
  $Tt.@Toast #Toast { @Text = "Quick actions ready"; }
}
