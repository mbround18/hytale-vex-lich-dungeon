$L = "../../Macros/Layout.ui";
$R = "../../Macros/Rows.ui";
$U = "../../Macros/Utility.ui";

Group #DemoHudObjectives {
  Anchor: (Top: 40, Right: 40, Width: 300, Height: 210);
  LayoutMode: Top;
  Background: #1f2a36(0.85);
  Padding: (Full: 10);

  $L.@HeaderBar #Header { @Text = "Objectives"; }
  $L.@Spacer #Space1 { @Height = 6; }

  $R.@KeyValueRow #Obj1 { @Key = "Find Relic"; @Value = "2/5"; }
  $L.@Spacer #Space2 { @Height = 4; }
  $R.@KeyValueRow #Obj2 { @Key = "Defeat Guards"; @Value = "1/3"; }
  $L.@Spacer #Space3 { @Height = 4; }
  $R.@KeyValueRow #Obj3 { @Key = "Open Gate"; @Value = "0/1"; }

  $L.@Spacer #Space4 { @Height = 6; }
  $L.@Divider #Divider {}
  $L.@Spacer #Space5 { @Height = 6; }

  $U.@IconLabelRow #Hint { @Text = "Open map for hints"; }
}
