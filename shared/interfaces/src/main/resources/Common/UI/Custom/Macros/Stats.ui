$C = "../Common.ui";

// Usage: $S.@StatCard #Card { @Label = "Health"; @Value = "100"; }
@StatCard = Group {
  @Label = "Label";
  @Value = "0";
  @Width = 120;
  @Height = 64;
  @Background = #223244;
  @LabelStyle = LabelStyle(FontSize: 11, TextColor: #9fb3c6, RenderUppercase: true);
  @ValueStyle = InputFieldStyle(FontSize: 18, TextColor: #e3eef9, RenderBold: true);
  Anchor: (Width: @Width, Height: @Height);
  Background: @Background;
  LayoutMode: Top;
  Padding: (Full: 8);

  $C.@TextField  #Value { Value: @Value; Style: @ValueStyle; Anchor: (Height: 24); }
  Label #Label { Text: @Label; Style: @LabelStyle; Anchor: (Height: 18); }
};
