// FriendsCommon.ui (texture-free)

@FriendsPagePadding = 14;
@FriendsCardPadding = 12;
@FriendsGap = 8;

@FriendsPanelBackground = #1f2a36;
@FriendsSectionBackground = #223244;
@FriendsInputBackground = #1b2633;
@FriendsButtonPrimary = #4fb6a7;
@FriendsButtonPrimaryHover = #5fc4b6;
@FriendsButtonPrimaryPressed = #44a89a;
@FriendsButtonSecondary = #3a4146;
@FriendsButtonSecondaryHover = #454e55;
@FriendsButtonSecondaryPressed = #32383d;

@PanelBackground = @FriendsPanelBackground;
@AccentColor = @FriendsButtonPrimary;
@HighlightColor = #e3eef9;
@BodyColor = #9fb3c6;
@FriendsHudNameStyle = LabelStyle(
  FontSize: 12,
  TextColor: #e3eef9,
  RenderBold: true
);
@FriendsHudLeaderStyle = LabelStyle(
  FontSize: 10,
  TextColor: @FriendsButtonPrimary,
  RenderBold: true
);
@FriendsHudStatStyle = LabelStyle(
  FontSize: 10,
  TextColor: #9fb3c6
);
@FriendsHudItemStyle = LabelStyle(
  FontSize: 10,
  TextColor: #c7d2de
);


@FriendsHeaderStyle = LabelStyle(
  FontSize: 18,
  TextColor: #c6d5e5,
  RenderBold: true,
  RenderUppercase: true,
  FontName: "Secondary",
  HorizontalAlignment: Start,
  VerticalAlignment: Center
);

@FriendsNameStyle = LabelStyle(
  FontSize: 16,
  TextColor: #e3eef9,
  RenderBold: true
);

@FriendsStatusStyle = LabelStyle(
  FontSize: 13,
  TextColor: #9fb3c6
);

@FriendsPrimaryButtonStyle = TextButtonStyle(
  Default: (
    Background: @FriendsButtonPrimary,
    LabelStyle: LabelStyle(FontSize: 14, TextColor: #ffffff, RenderBold: true)
  ),
  Hovered: (
    Background: @FriendsButtonPrimaryHover,
    LabelStyle: LabelStyle(FontSize: 14, TextColor: #ffffff, RenderBold: true)
  ),
  Pressed: (
    Background: @FriendsButtonPrimaryPressed,
    LabelStyle: LabelStyle(FontSize: 14, TextColor: #ffffff, RenderBold: true)
  )
);

@FriendsSecondaryButtonStyle = TextButtonStyle(
  Default: (
    Background: @FriendsButtonSecondary,
    LabelStyle: LabelStyle(FontSize: 14, TextColor: #d6dce1)
  ),
  Hovered: (
    Background: @FriendsButtonSecondaryHover,
    LabelStyle: LabelStyle(FontSize: 14, TextColor: #e4e9ed)
  ),
  Pressed: (
    Background: @FriendsButtonSecondaryPressed,
    LabelStyle: LabelStyle(FontSize: 14, TextColor: #d0d7dd)
  )
);

@FriendsPanel = Group {
  Background: @FriendsPanelBackground;
  Padding: (Full: @FriendsCardPadding);
};

@FriendsSection = Group {
  Background: @FriendsSectionBackground;
  Padding: (Full: 10);
};

@FriendsAvatar = Group {
  Anchor: (Width: 56, Height: 56);
  Background: @FriendsSectionBackground;
  Padding: (Full: 4);
};
