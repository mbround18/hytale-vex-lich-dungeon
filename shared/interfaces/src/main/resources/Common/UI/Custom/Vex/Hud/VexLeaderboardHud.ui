$V = "../VexCommon.ui";

Group {
    Anchor: (Top: 50, Left: 0, Right: 0, Height: 220);
    LayoutMode: Middle;

    $V.@DecoratedContainer {
        Anchor: (Width: 680);

        #VexTitle {
            $V.@Title {
                @Text = %server.customUI.vexLeaderboard.title;
            }
        }

        #VexContent {
            LayoutMode: Top;
            Padding: (Full: 18);

            Group #VexLeaderboardRule {
                Anchor: (Height: 2, Bottom: 10);
                Background: $V.@AccentRuleSoft;
            }

            Label #VexLeaderboardBody {
                Text: "";
                Style: (...$V.@DefaultLabelStyle, Wrap: true, TextColor: $V.@BodyColor);
            }
        }
    }
}
