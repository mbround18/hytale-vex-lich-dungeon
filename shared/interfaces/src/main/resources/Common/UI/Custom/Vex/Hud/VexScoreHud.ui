$V = "../VexCommon.ui";

Group {
    Anchor: (Top: 24, Left: 24, Width: 360, Height: 196);
    Background: (Color: $V.@FrameOuter);
    Padding: (Full: 2);

    Group {
        Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
        Background: (Color: $V.@FrameInner);
        Padding: (Full: 10);
        LayoutMode: Top;

        Group {
            Anchor: (Top: 0, Height: 24);
            LayoutMode: Left;

            Label #VexHudTitle {
                Anchor: (Left: 0, Height: 20);
                Text: %server.customUI.vexHud.title;
                Style: (FontSize: 16, RenderBold: true, TextColor: $V.@HighlightColor, LetterSpacing: 1);
            }
        }

        Group {
            Anchor: (Top: 6, Height: 2);
            Background: (Color: $V.@AccentRuleSoft);
        }

        Group {
            Anchor: (Top: 10, Height: 64);
            LayoutMode: Left;

            $V.@HudCard {
                Anchor: (Width: 108, Height: 60);

                Label #VexHudInstanceScore {
                    Anchor: (Top: 2, Height: 20);
                    Text: "Instance: 0";
                    Style: (FontSize: 13, RenderBold: true, TextColor: $V.@MutedColor);
                }
            }

            $V.@HudCard {
                Anchor: (Width: 108, Height: 60);

                Label #VexHudPlayerScore {
                    Anchor: (Top: 2, Height: 20);
                    Text: "Player: 0";
                    Style: (FontSize: 13, RenderBold: true, TextColor: $V.@BodyColor);
                }
            }

            $V.@HudCard {
                Anchor: (Width: 108, Height: 60);

                Label #VexHudDelta {
                    Anchor: (Top: 2, Height: 20);
                    Text: "+0";
                    Style: (FontSize: 14, RenderBold: true, TextColor: $V.@AccentColor);
                }
            }
        }

        Label #VexHudPartyTitle {
            Anchor: (Top: 12, Height: 16);
            Text: "Party Status";
            Style: (FontSize: 12, RenderUppercase: true, LetterSpacing: 1, RenderBold: true, TextColor: $V.@MutedColor);
        }

        Label #VexHudPartyList {
            Anchor: (Top: 6, Width: 320, Height: 44);
            Text: "You â€” HP 0/0 | ST 0/0";
            Style: (FontSize: 12, TextColor: $V.@BodyColor, Wrap: true);
        }
    }
}
