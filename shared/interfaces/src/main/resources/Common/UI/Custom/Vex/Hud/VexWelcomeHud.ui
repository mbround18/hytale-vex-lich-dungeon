$V = "../VexCommon.ui";

Group {
    Anchor: (Top: 50, Left: 0, Right: 0, Height: 140);
    LayoutMode: Middle;

    $V.@DecoratedContainer {
        Anchor: (Width: 680);

        #VexTitle {
            $V.@Title {
                @Text = %server.customUI.vexWelcome.title;
            }
        }

        #VexContent {
            LayoutMode: Top;
            Padding: (Full: 18);

            Group #VexWelcomeRule {
                Anchor: (Height: 2, Bottom: 10);
                Background: $V.@AccentRuleSoft;
            }

            Label #VexWelcomeBody {
                Text: %server.customUI.vexWelcome.body;
                Style: (...$V.@DefaultLabelStyle, Wrap: true, TextColor: $V.@MutedColor);
            }
        }
    }
}
