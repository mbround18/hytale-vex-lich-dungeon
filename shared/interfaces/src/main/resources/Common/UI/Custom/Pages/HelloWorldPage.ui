@TextStyle = LabelStyle(
  FontSize: 16,
  TextColor: #ffffff,
  HorizontalAlignment: Center,
  VerticalAlignment: Center
);

Group {
  Anchor: (Width: 400, Height: 250);
  Background: #1f1f1f(0.95);
  LayoutMode: Top;
  Padding: (Full: 20);

  Label #Title {
    Text: "Title of the Page";
    Anchor: (Height: 40);
    Style: (FontSize: 24, TextColor: #ffffff, HorizontalAlignment: Center);
  }

  Label #Body {
    Text: "Body of the Page";
    Style: (FontSize: 16, TextColor: #dddddd, Wrap: true);
  }

  Label #Footer {
    Text: "Footer of the Page";
    Anchor: (Height: 30, Top: 10);
    Style: (FontSize: 14, TextColor: #aaaaaa, HorizontalAlignment: Center);
  }
}
