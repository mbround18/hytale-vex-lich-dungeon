@AccentColor = #9a6bff;
@TitleColor = #f3eaff;
@BodyColor = #d6c7ff;
@MutedColor = #c2b0f0;
@HighlightColor = #fff7ff;
@HudBackground = #100a1b(0.88);
@PanelBackground = #130b1f(0.97);
@HeaderBackground = #28133f;
@DecorationColor = #6b35a1;
@OverlayColor = #08040e(0.78);
@AccentRuleStrong = #8b5cf6(0.55);
@AccentRuleSoft = #8b5cf6(0.35);
@FrameOuter = #2b163b;
@FrameInner = #0f0816(0.96);
@HudCardBackground = #1b1029(0.92);
@HudCardEdge = #3c1b59(0.8);
@GlowAccent = #8b5cf6(0.4);
@GoldAccent = #fbbf24;

@DefaultLabelStyle = (FontSize: 16, TextColor: @BodyColor);

@TitleStyle = LabelStyle(
  FontSize: 20,
  VerticalAlignment: Center,
  RenderUppercase: true,
  TextColor: @TitleColor,
  FontName: "Secondary",
  RenderBold: true,
  LetterSpacing: 1
);

@Title = Label {
  @Alignment = Center;
  @Text = "";

  Style: (
    ...@TitleStyle,
    HorizontalAlignment: @Alignment
  );
  Padding: (Horizontal: 16);
  Text: @Text;
};

@TitleHeight = 44;

@DecoratedContainer = Group {
  @ContentPadding = Padding(Full: 18);

  Group #VexFrameOuter {
    Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
    Background: (Color: @FrameOuter);
  }

  Group #VexFrameInner {
    Anchor: (Left: 2, Right: 2, Top: 2, Bottom: 2);
    Background: (Color: @FrameInner);
  }

  Group #VexTitle {
    Anchor: (Height: @TitleHeight, Top: 0);
    Background: (Color: @HeaderBackground);
    Padding: (Top: 7);
  }

  Group #VexContent {
    LayoutMode: Top;
    Anchor: (Top: @TitleHeight);
    Padding: @ContentPadding;
    Background: (Color: @PanelBackground);
  }

  Group #VexDecorationBottom {
    Anchor: (Width: 236, Height: 11, Bottom: -6);
    Background: (Color: @DecorationColor);
  }
};

@HudPanel = Group {
  @PanelPadding = Padding(Full: 12);
  Background: (Color: @HudBackground);
  Padding: @PanelPadding;
};

@HudCard = Group {
  @CardPadding = Padding(Full: 8);
  Background: (Color: @HudCardBackground);
  Padding: @CardPadding;
};

@PageOverlay = Group {
  Background: @OverlayColor;
};
