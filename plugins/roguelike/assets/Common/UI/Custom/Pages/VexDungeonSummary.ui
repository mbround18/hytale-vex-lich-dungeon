$V = "../Vex/VexCommon.ui";

@HeaderRuleAnchor = (Height: 2, Bottom: 14);
@PlayersRuleAnchor = (Height: 2, Bottom: 10);

 $V.@PageOverlay {
    LayoutMode: Middle;

    $V.@DecoratedContainer {
        Anchor: (Width: 680);

        #VexTitle {
            $V.@Title {
                @Text = %server.customUI.vexDungeonSummary.title;
            }
        }

        #VexContent {
            LayoutMode: Top;
            Padding: (Full: 18);

            Label #SummaryHeader {
                Text: %server.customUI.vexDungeonSummary.header;
                Anchor: (Bottom: 8);
                Style: (...$V.@DefaultLabelStyle, FontSize: 18, RenderBold: true, TextColor: $V.@HighlightColor);
            }

            Group #HeaderRule {
                Anchor: @HeaderRuleAnchor;
                Background: $V.@AccentRuleStrong;
            }

            Label #SummaryStats {
                Text: "";
                Anchor: (Bottom: 14);
                Style: (...$V.@DefaultLabelStyle, Wrap: true, TextColor: $V.@MutedColor);
            }

            Label #SummaryPlayers {
                Text: %server.customUI.vexDungeonSummary.players;
                Anchor: (Bottom: 8);
                Style: (...$V.@DefaultLabelStyle, FontSize: 17, RenderBold: true, TextColor: $V.@HighlightColor);
            }

            Group #PlayersRule {
                Anchor: @PlayersRuleAnchor;
                Background: $V.@AccentRuleSoft;
            }

            Label #SummaryBody {
                Text: "";
                Style: (...$V.@DefaultLabelStyle, Wrap: true, TextColor: $V.@BodyColor);
            }
        }
    }
}
