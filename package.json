{
  "name": "vex-lich-dungeon",
  "private": true,
  "packageManager": "pnpm@10.29.1",
  "devDependencies": {
    "concurrently": "9.2.1"
  },
  "workspaces": [
    "packages/ui-dashboard",
    "packages/ui-frontdoor",
    "packages/ui-manager",
    "packages/ui-shared"
  ],
  "scripts": {
    "dev:dashboard": "pnpm --filter ui-dashboard dev",
    "build:dashboard": "pnpm --filter ui-dashboard build",
    "dev:frontdoor": "pnpm --filter ui-frontdoor dev",
    "build:frontdoor": "pnpm --filter ui-frontdoor build",
    "dev:manager": "pnpm --filter ui-manager dev",
    "build:manager": "pnpm --filter ui-manager build",
    "dev:shared": "pnpm --filter ui-shared dev",
    "dev": "concurrently -n DASH,FRONT,MANAGER,SHARED -c green,cyan,magenta,blue \"pnpm run dev:dashboard\" \"pnpm run dev:frontdoor\" \"pnpm run dev:manager\" \"pnpm run dev:shared\""
  }
}
