$V = "../VexCommon.ui";

Group {
    Anchor: (Top: 20, Left: 140, Width: 240, Height: 90);
    Background: (Color: #120a1f(0.7));

    Label #VexHudTitle {
        Anchor: (Left: 10, Top: 8, Height: 18);
        Text: %server.customUI.vexHud.title;
        Style: (FontSize: 16, RenderBold: true, TextColor: #efe3ff);
    }

    Label #VexHudInstanceScore {
        Anchor: (Left: 10, Top: 30, Height: 16);
        Text: "Instance: 0";
        Style: (FontSize: 14, TextColor: #d4c2ff);
    }

    Label #VexHudPlayerScore {
        Anchor: (Left: 10, Top: 50, Height: 16);
        Text: "Player: 0";
        Style: (FontSize: 14, TextColor: #cdb6ff);
    }

    Label #VexHudDelta {
        Anchor: (Left: 10, Top: 70, Height: 16);
        Text: "+0";
        Style: (FontSize: 14, TextColor: #8a4bff);
    }
}
